{
  "extends": "./tsconfig.json",
  "include": ["src"],
  "exclude": ["src/**/*.spec.ts", "src/**/*.test.ts"],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/tmp/tsconfig.app.tsbuildinfo",
    "noEmit": true, // Vite handles the emitting, TypeScript is just for type checking
    "jsx": "react-jsx"
  }
}
